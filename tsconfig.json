{
  "compilerOptions": {
    "target": "es2020", // Modern Node + browser support
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, // Don't output compiled files
    "esModuleInterop": true, // Enables import/export compatibility
    "module": "commonjs", // Required for Node scripts / ts-node
    "moduleResolution": "node", // Standard Node resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/scripts/**/*.ts" // Include your seed scripts
  ],
  "exclude": ["node_modules"]
}
